{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "stripInternal": true,
        "jsx": "react",
        "outDir": "dist",
        "plugins": [
            { "transform": "./src/index.ts", "extensions": [".yaml", ".txt"] }
        ]
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
